@using WebsiteOrdering.Helper
@using WebsiteOrdering.ViewModels
@{
    var cart = Context.Session.Get<List<CartItem>>("Cart") ?? new List<CartItem>();
    var totalQuantity = cart.Sum(item => item.SoLuong);
}
<span id="cart-count" class="badge bg-danger">@totalQuantity</span>
