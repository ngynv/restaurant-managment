@model WebsiteOrdering.ViewModels.CartPageViewModel

@{
    ViewData["Title"] = "Thông tin thanh toán";
    var selectedIds = TempData["SelectedIds"] as List<string> ?? new List<string>();
    <link rel="stylesheet" href="~/css/style.css" />
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (Model.CartItems == null || !Model.CartItems.Any())
{
    <p>Giỏ hàng trống.</p>
}
else
{
    // <form asp-action="CartEmpty" asp-controller="Cart">
    //     <button type="submit" class="btn btn-danger mb-3">Xoá toàn bộ giỏ hàng</button>
    // </form>

    <form method="post" asp-action="Confirm" asp-controller="Checkout">
        <div class="checkout-container">
            <div class="checkout-left">
                <a href="/Products" class="checkout-pro-back-to-menu">
                    Quay lại
                    <svg viewBox="0 0 512 512" width="20" height="20" fill="none">
                        <path d="M256 64L192 128L256 192" stroke="currentColor" stroke-width="40" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M192 128H352C405.019 128 448 170.981 448 224C448 277.019 405.019 320 352 320H160" stroke="currentColor" stroke-width="40" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </a>
                <!-- GIỎ HÀNG -->
                <table class="checkout-pro-table">
                    <thead>
                        <tr>
                            <th class="checkout-pro-hidden">Chọn</th>
                            <th>Ảnh</th>
                            <th class="table-product-name">Sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Tổng</th>
                            <th class="checkout-pro-hidden">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            var itemId = $"{item.IDMONAN}_{item.IDMMONAN2}_{item.Size}_{item.DeBanh}_{string.Join(",", item.Topping?.Select(t => t.Idtopping) ?? new List<string>())}";
                            <tr>
                                <td class="checkout-pro-hidden">
                                    <input type="checkbox" name="selectedIds" value="@itemId"
                                           class="checkout-pro-check cart-select"
                                           data-tongtien="@item.TongTien"
                                           checked />
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.TENSANPHAM2))
                                    {
                                        <div class="pizza-split-image">
                                            <div class="pizza-half left">
                                                <img src="~/css/img/@item.ANHSANPHAM" alt="Ảnh vị 1" />
                                            </div>
                                            <div class="pizza-half right">
                                                <img src="~/css/img/@item.ANHSANPHAM2" alt="Ảnh vị 2" />
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <img src="~/css/img/@item.ANHSANPHAM" alt="Ảnh" class="checkout-pro-anh" />
                                    }
                                </td>
                                <td class="table-product-name">
                                    <div class="checkout-pro-name">
                                        @if (!string.IsNullOrEmpty(item.TENSANPHAM2))
                                        {
                                            <text>PIZZA 2 VỊ – @item.TENSANPHAM & @item.TENSANPHAM2</text>
                                        }
                                        else
                                        {
                                            <text>@item.TENSANPHAM</text>
                                        }
                                    </div>
                                    <div class="checkout-pro-options">
                                        @if (!string.IsNullOrEmpty(item.Size))
                                        {
                                            <div>Size: @item.Size</div>
                                        }
                                        @if (!string.IsNullOrEmpty(item.DeBanh))
                                        {
                                            <div>Đế: @item.DeBanh</div>
                                        }
                                        @{
                                            if (item.Topping != null && item.Topping.Any())
                                            {
                                                <div>
                                                    Topping:
                                                    @{
                                                        foreach (var top in item.Topping)
                                                        {
                                                            @top.Tentopping
                                                            if (top != item.Topping.Last())
                                                            {
                                                                @:<span>, </span>
                                                            }
                                                        }
                                                    }
                                                </div>
                                             ;
                                         }
                                        }
                                        @if (!string.IsNullOrEmpty(item.GhiChu))
                                        {
                                            <div>Ghi chú: @item.GhiChu</div>
                                        }
                                    </div>
                                </td>


                                <td>@item.DonGia.ToString("N0") VNĐ</td>

                                <td>
                                    <div class="checkout-pro-quantity-static">
                                        @item.SoLuong
                                    </div>
                                </td>

                                <td>@item.TongTien.ToString("N0") VNĐ</td>

                                <td class="checkout-pro-hidden">
                                    <form asp-action="DeleteItem" asp-controller="Cart">
                                        <input type="hidden" name="idmonan" value="@item.IDMONAN" />
                                        <input type="hidden" name="idmonan2" value="@item.IDMMONAN2" />
                                        <input type="hidden" name="size" value="@item.Size" />
                                        <input type="hidden" name="debanh" value="@item.DeBanh" />
                                        @foreach (var top in item.Topping ?? new List<WebsiteOrdering.Models.Topping>())
                                        {
                                            <input type="hidden" name="toppings" value="@top.Idtopping" />
                                        }
                                        <button type="submit" class="btn btn-danger btn-sm">Xoá</button>
                                    </form>

                                    <button type="button" class="btn btn-sm btn-warning btn-edit"
                                            data-idmonan="@item.IDMONAN"
                                            data-idmonan2="@item.IDMMONAN2"
                                            data-size="@item.Size"
                                            data-debanh="@item.DeBanh"
                                            data-toppings="@string.Join(",", item.Topping?.Select(t => t.Idtopping) ?? new List<string>())"
                                            data-soluong="@item.SoLuong"
                                            data-ghichu="@item.GhiChu"
                                            data-name="@item.TENSANPHAM"
                                            data-name2="@item.TENSANPHAM2"
                                            data-anhsanpham="@item.ANHSANPHAM"
                                            data-giasize="@item.GiaSize"
                                            data-giadebanh="@item.GiaDeBanh"
                                            data-giacoban="@item.GiaCoBan"
                                            data-toggle="modal" data-target="#editModal">
                                        Sửa
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="checkout-info">
                <partial name="_UserInfo" for="UserInfo" />
                <div class="checkout-info-total">
                    <span>Tổng cộng:</span>
                    <span id="totalAmount">0 VNĐ</span>
                </div>
                <button type="submit" class="check-out-btn">Thanh toán</button>

                <div class="modal fade" id="loading-modal" tabindex="-1" data-backdrop="static" data-keyboard="false">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-body text-center">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="sr-only">Loading...</span>
                                </div>
                                <p class="mt-3">Đang chuyển hướng đến trang thanh toán...</p>
                                <p class="text-muted">Vui lòng không đóng trang này</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- Modal Sửa Giỏ Hàng -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form id="edit-cart-form" asp-action="UpdateCartItem" asp-controller="Cart" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel">Sửa sản phẩm trong giỏ hàng</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Hidden fields cho sản phẩm gốc -->
                        <input type="hidden" id="edit-original-idmonan" name="originalIdmonan" />
                        <input type="hidden" id="edit-original-idmonan2" name="originalIdmonan2" />
                        <input type="hidden" id="edit-original-size" name="originalSizeId" />
                        <input type="hidden" id="edit-original-debanh" name="originalDeBanhId" />
                        <input type="hidden" id="edit-original-toppings" name="originalToppings" />

                        <!-- Hidden fields cho sản phẩm mới -->
                        <input type="hidden" id="edit-idmonan" name="idmonan" />
                        <input type="hidden" id="edit-idmonan2" name="idmonan2" />

                        <div class="mb-3">
                            <label for="edit-size" class="form-label">Size</label>
                            <select class="form-select" id="edit-size" name="selectedSizeId">
                                @if (ViewBag.AllSizes != null)
                                {
                                    @foreach (var size in ViewBag.AllSizes as List<WebsiteOrdering.Models.Size>)
                                    {
                                        <option value="@size.Idsize">@size.Tensize</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="edit-debanh" class="form-label">Đế bánh</label>
                            <select class="form-select" id="edit-debanh" name="selectedDeBanhId">
                                @if (ViewBag.AllDeBanh != null)
                                {
                                    @foreach (var debanh in ViewBag.AllDeBanh as List<WebsiteOrdering.Models.Debanh>)
                                    {
                                        <option value="@debanh.Iddebanh">@debanh.Tendebanh</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="edit-soluong" class="form-label">Số lượng</label>
                            <input type="number" class="form-control" id="edit-soluong" name="soluong" min="1" required />
                        </div>

                        <div class="mb-3">
                            <label for="edit-ghichu" class="form-label">Ghi chú</label>
                            <textarea class="form-control" id="edit-ghichu" name="ghichu" rows="2"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Topping</label>
                            <div id="edit-topping-list">
                                @if (ViewBag.AllToppings != null)
                                {
                                    @foreach (var top in ViewBag.AllToppings as List<WebsiteOrdering.Models.Topping>)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input edit-topping-checkbox" type="checkbox"
                                                   name="selectedToppingIds" value="@top.Idtopping" id="edit_top_@top.Idtopping">
                                            <label class="form-check-label" for="edit_top_@top.Idtopping">
                                                @top.Tentopping (+@top.Giatopping₫)
                                            </label>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
}
@section Scripts {
    <script src="~/js/site.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const left = document.querySelector('.checkout-left');
            const info = document.querySelector('.checkout-info');
            if (left && info) {
                const infoHeight = info.offsetHeight;
                left.style.maxHeight = infoHeight + 'px';
                left.style.overflowY = 'auto';
            }
        });
    </script>
}